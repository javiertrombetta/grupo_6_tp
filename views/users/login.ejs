<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width= , initial-scale=1.0">    
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/styles-nicolas.css">
    <script src="https://kit.fontawesome.com/0b0b0ca8c1.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <%- include("../partials/header.ejs") %>
    </header>
    <main>
        <form class="form" action="/users/login" method="POST">
            <div class = "login-sections">

                <!-- Título -->
                <section class="login-title">
                    <h1>Login</h1>
                </section>

                <!-- Datos de acceso -->
                <section class="login-data">
                    <p style="color: red;"><%= locals.errors ? errors.msg : "" %></p>
                    <!-- correo electrónico --> 
                    <div class="login-input">
                        <div class = "login-icon">  
                            <i class="fas fa-envelope"></i>
                        </div>
                        <input class="login-main-inputBox" type="email" name="email" minlength="5" required placeholder="Correo Electrónico" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Correo Electrónico'"> 
                    </div>       
                        
                    <!-- contraseña -->
                    <div class="login-input">                
                        <div class = "login-icon">
                            <i class="fas fa-key"></i>
                        </div>                                
                        <input class="login-main-inputBox" type="password" name="password" minlength="5" required placeholder="Contraseña" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Contraseña'">       
                    </div>

                    <div class="login-input">                                               
                        <input class="login-checkbox" type="checkbox" name="remember_user">Recordar mi usuario
                    </div>

                </section>

                <!-- Botón de login -->
                <section class="login-button">
                    <input type="submit" value="Login" class="button">
                </section>

                <!-- Registrarse si no tiene cuenta -->
                <section class="login-register">
                    <p>¿no tienes cuenta? <a class="link" href="/users/register">Registrar</a></p>
                </section>

                <!-- Términos -->
                <section class="login-terms">
                    <p>Al registrate aceptas nuestras condiciones de uso y politicas de privacidad</p>
                </section>
            </div>
            
        </form> 
    </main>
    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>
</body>
</html>